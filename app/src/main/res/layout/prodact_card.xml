<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/prodact_card_parent"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:elevation="3dp"
    android:background="@color/white"
    android:layout_marginTop="14dp"
    android:layout_marginHorizontal="12dp"

    >
    <ImageView
        android:id="@+id/prodact_iamge"
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:transitionName="Image_transition"
        android:src="@drawable/image5"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:padding="12dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/prodact_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Puollve"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"

                />
            <TextView
                android:id="@+id/prodact_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hodday"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"

                />
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:id="@+id/project_evaluate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:layout_below="@id/prodact_type">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_star_24"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_star_24"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_star_24"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_star_24"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_star_outline_24"/>
            </LinearLayout>
            <TextView
                android:id="@+id/prodact_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$15"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>
</LinearLayout>